<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Games.Games10">



    <TextView
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"

            android:text="00:30"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textSize="36sp"
            android:textColor="@android:color/white"
            android:id="@+id/txt_timer"
            android:layout_width="63dp"
            android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/z"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"/>

    <TextView
            android:id="@+id/tv"
            android:layout_width="171dp"
            android:layout_height="92dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="#ff4000"
            android:textSize="50dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/z" app:layout_constraintHorizontal_bias="0.453"/>

    <ImageView
            android:layout_width="192dp"
            android:layout_height="165dp" app:srcCompat="@android:drawable/arrow_up_float"
            android:id="@+id/imageViewOfQ"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tv"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/firstB"
            app:layout_constraintVertical_bias="0.547"/>


    <Button
            android:textSize="24sp"
            android:layout_width="241dp"
            android:layout_height="52dp"
            style="@style/ButtonStyle1"

            android:id="@+id/firstB" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="52dp" app:layout_constraintBottom_toTopOf="@+id/secB" />
    <Button

            android:textSize="24sp"
            android:layout_width="241dp"
            android:layout_height="52dp"
            style="@style/ButtonStyle1"
            android:id="@+id/secB" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="62dp" app:layout_constraintBottom_toTopOf="@+id/thirdB"/>
    <Button

            android:textSize="24sp"
            android:layout_width="241dp"
            android:layout_height="52dp"
            style="@style/ButtonStyle1"
            android:id="@+id/thirdB" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="40dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.475"/>
    <Button
            android:id="@+id/z"
            style="@style/ButtonStyle1"
            android:text="انتهيت"
            android:textSize="18sp"
            android:clickable="true"
            android:layout_width="86dp"
            android:layout_height="74dp"
            android:gravity="center"
            android:layout_gravity="bottom" tools:text="انتهيت" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="4dp" app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"/>


</android.support.constraint.ConstraintLayout>