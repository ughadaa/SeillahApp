<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"

        tools:context=".AddChild">
    <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/addbb"
            android:id="@+id/imageView4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.43"/>
    <EditText
            android:inputType="textEmailAddress"
            android:layout_width="241dp"
            android:layout_height="52dp"

            android:padding="11dp"

            android:background="@drawable/border"
            android:ems="10"
            android:id="@+id/AddedChildEmail" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.428"
            android:hint="البريد الإلكتروني"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView7"/>
    <Button
            android:text="إضافة"
            style="@style/ButtonStyle1"
            android:layout_width="124dp"
            android:layout_height="51dp"
            android:id="@+id/AddNewChild" android:layout_marginBottom="120dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.467" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/AddedChildEmail" app:layout_constraintVertical_bias="0.0"
            android:textSize="18sp"/>
    <TextView
            android:text="لإضافة طفل جديد ادخل \n البريد الإلكتروني الخاص بالطفل:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.446"
            app:layout_constraintEnd_toEndOf="parent" android:textAlignment="center"/>
</android.support.constraint.ConstraintLayout>