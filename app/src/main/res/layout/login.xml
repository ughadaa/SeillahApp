<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/bg"
                                             tools:layout_editor_absoluteY="25dp">

    <EditText
            android:layout_width="241dp"
            android:layout_height="52dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            android:padding="11dp"

            android:background="@drawable/border"
            android:id="@+id/email"
            android:hint="البريد الإلكتروني" android:gravity="right"
            android:textColor="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" android:textSize="18sp"/>
    <EditText

            android:inputType="textPassword"
            android:ems="10"
            android:layout_width="241dp"
            android:layout_height="52dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            android:padding="11dp"

            android:background="@drawable/border"

            android:id="@+id/password"
            android:hint="كلمة المرور" android:gravity="right"
            android:textColor="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.494" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email" android:textSize="18sp"/>
    <Button
            android:text="تسجيل الدخول"
            android:layout_width="241dp"
            android:layout_height="52dp"
            android:id="@+id/buttonLogin"
            style="@style/ButtonStyle1"

            app:layout_constraintTop_toBottomOf="@+id/password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/Regbtn" app:layout_constraintVertical_bias="1.0"
            android:textSize="24sp" app:layout_constraintHorizontal_bias="0.494"/>
    <Button
            android:text="إنشاء حساب"
            android:layout_width="241dp"
            android:layout_height="52dp"
            style="@style/ButtonStyle1"


            android:id="@+id/Regbtn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="40dp" app:layout_constraintBottom_toBottomOf="parent" android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.493"/>
    <ImageView
            android:layout_width="237dp"
            android:layout_height="214dp" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView5" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="48dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.506"/>


</android.support.constraint.ConstraintLayout>