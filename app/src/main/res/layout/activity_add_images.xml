<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"

        tools:context=".AddImages">

    <ImageView

            android:layout_width="184dp"
            android:layout_height="184dp" tools:src="@tools:sample/avatars"
            android:id="@+id/addimage" android:layout_marginTop="96dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.498"
    />
    <EditText

            android:layout_width="241dp"
            android:layout_height="52dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            android:padding="11dp"

            android:background="@drawable/border"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/addeditText" android:textAlignment="textStart" android:hint="اسم الصوره"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/addimage"/>
    <Button
            android:text="حفظ"
            android:layout_width="135dp"
            android:layout_height="49dp"
            android:id="@+id/uploadBtn2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/addeditText" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp"
            app:layout_constraintVertical_bias="0.178" style="@style/ButtonStyle1"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/chooseBtn2"
            app:layout_constraintHorizontal_bias="0.064"/>
    <Button
            android:text="اختر الصورة"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:id="@+id/chooseBtn2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="36dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/addeditText"
            style="@style/ButtonStyle1" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.181"/>
</android.support.constraint.ConstraintLayout>