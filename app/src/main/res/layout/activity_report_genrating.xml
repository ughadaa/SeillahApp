<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"

        tools:context=".MedicalSpecialist.ReportGenrating">

    <Button
            android:text="إرسال"

            android:layout_width="137dp"
            android:layout_height="53dp"
            style="@style/ButtonStyle1"
            android:id="@+id/button_send_report"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.829"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent" android:textSize="24sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editText_report"
            app:layout_constraintVertical_bias="0.753"/>
    <EditText
            android:layout_width="307dp"
            android:background="@drawable/border"
            android:layout_height="397dp"
            android:inputType="textMultiLine"
            android:lines="10"
            android:minLines="6"
            android:gravity="top"
            android:maxLines="10"
            android:padding="11dp"

            android:scrollbars="vertical"


            android:ems="10"
            android:id="@+id/editText_report"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="60dp" app:layout_constraintTop_toTopOf="parent"
    />
</android.support.constraint.ConstraintLayout>