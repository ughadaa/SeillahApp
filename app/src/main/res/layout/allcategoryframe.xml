<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"

android:background="@color/bg"                                             android:layout_height="wrap_content"

>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="408dp"
            android:layout_height="wrap_content" android:gravity="center_horizontal">
        <ImageView
                android:layout_width="181dp"
                android:layout_height="193dp" app:srcCompat="@drawable/familycategory"
                android:id="@+id/imageView_Catepic" android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <Button
                android:text="NAME"
                android:id="@+id/button_Catebtn"

                android:layout_width="241dp"
                android:layout_height="52dp"


                android:textSize="24sp"

                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView_Catepic"
                app:layout_constraintStart_toStartOf="@+id/imageView_Catepic"
                app:layout_constraintEnd_toEndOf="@+id/imageView_Catepic"
                android:layout_marginBottom="10dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0" android:background="#ffffff"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"/>

        <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@drawable/simpleborder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginTop="8dp"
                android:id="@+id/view555"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>