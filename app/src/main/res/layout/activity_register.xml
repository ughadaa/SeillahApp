<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Register">

    <EditText


            android:layout_width="241dp"
            android:layout_height="52dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="right"

            android:padding="16dp"

            android:background="@drawable/border"
            android:inputType="textPassword"
            android:ems="10"

            android:id="@+id/editTextpaw"
            android:hint="كلمة السر"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextemail" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.568"/>

    <Spinner
            android:id="@+id/spinner"
            android:layout_width="139dp"
            android:layout_height="23dp"
            android:layout_below="@+id/editTextpaw"
            android:layout_margin="10dp"
            android:entries="@array/usertype"
            app:layout_constraintStart_toStartOf="@+id/editTextpaw"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextpaw"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/buttonForRegister"
            app:layout_constraintVertical_bias="0.333"/>


    <EditText

            android:layout_width="241dp"
            android:layout_height="52dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            android:padding="16dp"

            android:background="@drawable/border"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editTextemail"
            android:hint="البريد الإلكتروني"
            android:textColor="@color/colorAccent"
            app:layout_constraintTop_toBottomOf="@+id/theusername" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.562" app:layout_constraintEnd_toEndOf="parent"
            android:gravity="right"/>
    <EditText
            android:layout_width="241dp"
            android:layout_height="52dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            android:padding="16dp"

            android:background="@drawable/border"
            android:inputType="textPersonName"
            android:ems="10"
            android:gravity="right"

            android:id="@+id/theusername"
            android:hint="اسم المستخدم"
            android:textColor="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.562" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="184dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="تسجيل دخول"
            android:layout_width="241dp"
            android:layout_height="46dp"
            style="@style/ButtonStyle1"

            android:id="@+id/buttonReport"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.535" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
    />
    <ImageView
            android:layout_width="217dp"
            android:layout_height="159dp" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView6" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/theusername" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="نوع المستخدم:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" tools:text="نوع المستخدم:" app:layout_constraintEnd_toEndOf="@+id/editTextpaw"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/spinner"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextpaw" app:layout_constraintHorizontal_bias="0.598"
            android:textSize="18sp"/>
    <Button
            android:text="تسجيل"
            style="@style/ButtonStyle1"

            android:layout_width="241dp"
            android:layout_height="46dp"
            android:id="@+id/buttonForRegister" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/buttonReport"
            android:textSize="18sp" app:layout_constraintHorizontal_bias="0.533"/>

</android.support.constraint.ConstraintLayout>