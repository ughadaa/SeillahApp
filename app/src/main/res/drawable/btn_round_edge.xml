<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="40dp" />
            <stroke android:width="1dip" android:color="#f3e287" />
            <gradient  android:angle="-90"  android:startColor="#40c3ff" android:endColor="#40c3ff"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="40dp" />
            <stroke android:width="1dip" android:color="#40c3ff" />
            <solid  android:color="#40c3ff"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="40dp" />
            <stroke android:width="1dip" android:color="#f3e287" />
            <gradient  android:angle="-90"  android:startColor="#40c3ff" android:endColor="#40c3ff" />
        </shape>
    </item>
</selector>